<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Pet&Me!
			{% endblock %}
		</title>
		<link href="https://bootswatch.com/5/journal/bootstrap.min.css" rel="stylesheet">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body style="background-color:#EEBBC1;">


		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="/">Pet&Me</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link active" href="/search">Liste de nos petit chérubins
								<span class="visually-hidden">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/form">Faire Adopter</a>
						</li>
					</ul>
					{% if not app.user %}
						<form class="d-flex" action="{{path('security_login')}}">
							<button class="btn btn-primary my-2 my-sm-0" type="submit">Connexion</button>
						</form>
            <form class="d-flex" action="/inscription">
							<button class="btn btn-secondary my-2 my-sm-0" type="submit">Inscription</button>
						</form>
          {% else %}
          	<form class="d-flex" action="{{path('security_logout')}}">
							<button class="btn btn-primary my-2 my-sm-0" type="submit">Deconnexion</button>
						</form>
          {% endif %}
					</div>
				</div>
			</nav>


			{% block body %}{% endblock %}
		</body>
	</body>
</html>
